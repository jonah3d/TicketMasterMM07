        <ListView.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Nom}" Margin="0,5,0,5"/>
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>-->
  
        

      
</Page>
